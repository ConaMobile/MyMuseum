<resources>
    <!-- Base application theme. -->
    <style name="Theme.OnlineMuzey" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#15222B</item>
        <item name="colorPrimaryVariant">#15222B</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowDisablePreview">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ProgressBarTheme">
        <item name="colorAccent">#15222B</item> <!-- Whatever color you want-->
    </style>

    <style name="Theme.OnlineMuzey.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
<!--        <item name="android:statusBarColor">#450E3149</item>-->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.OnlineMuzey.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="Theme.OnlineMuzey.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>